<Window x:Class="CSharp_TicTacToe.MessageBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CSharp_TicTacToe"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Height="175" Width="350" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <TextBlock x:Name="tbMsg" Margin="5,10" Height="70" FontFamily="Calibri" TextWrapping="Wrap" TextAlignment="Center" FontSize="14" FontWeight="DemiBold" VerticalAlignment="Top" HorizontalAlignment="Center"></TextBlock>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="5">
                <Button x:Name="btnOK" IsCancel="True" HorizontalAlignment="Right" Margin="10,5" Width="60" Click="BtnOK_Click">OK</Button>
                <Button x:Name="btnCancel" IsCancel="True" HorizontalAlignment="Right" Margin="10,5" Width="60" Click="BtnCancel_Click">Cancel</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
